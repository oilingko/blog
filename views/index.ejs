<%- include('./partials/header.ejs') %>
<%- include('./partials/head.ejs') %>
<div class="posts-list">
    <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div class="post-item">
                <div class="post-thumbnail">
                    <a href="/posts/<%= post._id %>">
                        <img src="<%= post.thumbnailUrl || '/images/default-thumbnail.png' %>" alt="thumbnail">
                    </a>
                </div>
                <div class="post-text-content">
                    <h4 class="post-title">
                        <a href="/posts/<%= post._id %>">
                            <%= post.title %>
                        </a>
                    </h4>
                    <div class="post-meta">
                        <span><i class="fa-solid fa-user"></i> <%= post.author %></span>
                        <span><i class="fa-solid fa-calendar-days"></i> <%= post.createdAt.toLocaleDateString('bn-BD') %></span>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="post-item" style="justify-content: center;">
            <p>এখনও কোনো পোস্ট নেই।</p>
        </div>
    <% } %>
</div>

<%- include('./partials/footer.ejs') %>